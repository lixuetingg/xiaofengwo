.nav-bar {
  position: fixed;
  width: 100%;
  height: 63px;
  top: 0;
  color: #fff;
  background: #000;
  z-index: 999;
}

.nav-bar .search {
  width: 60%;
  color: #333;
  font-size: 14px;
  background: #fff;
  position: absolute;
  border-radius: 50px;
  background: #ddd;
  padding-left: 14px;
}

.nav-pic {
  margin-top: 50rpx;
  height:300rpx;
  width:750rpx;
  position:relative
  }

  
.nav-pic .icon {
  position: absolute;
  height: 70rpx;
  width: 70rpx;
  border-radius: 50%;
  border: 15rpx solid #000;
}

.nav-pic .name {
  position: absolute;
  font-size: 10px;
  top: 5px;
  left: 100rpx;
  color: #fff;
}

.nav-pic .to {
  background-color: #fff;
  position: absolute;
  left: 87rpx;
  top: 20px;
  width: 30px;
  height: 20px;
  border-radius: 16%;
  line-height: 20px;
  text-align: center;
  color: #000;
  font-size: 10px;
  margin: 0;
  padding: 0;
}