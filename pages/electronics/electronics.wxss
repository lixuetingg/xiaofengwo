/* pages/electronics/electronics.wxss */
.prolist{
  display: flex;
  flex-direction: column;
  width: 100%;
}
.prolist_item{
  padding: 6rpx 0;
  background-color: #fff;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.prolist_cover{
  padding: 0 30rpx;
  width: 210rpx;
  height: 240rpx;
  overflow: hidden;
}
.prolist_cover image{
  width: 100%;
  height: 100%;
  border: 0 none;
  vertical-align: top;
}
.prolist_info{
  width: 530rpx;
  min-height: 240rpx;
  box-sizing: border-box;
  padding: 0 20rpx 16rpx 20rpx;
  overflow: hidden;
  border-bottom: 2rpx solid #e8e8ed;
}
.prolist_title{
  /* white-space: nowrap; */
  /* 内容溢出隐藏 */
  overflow: hidden;
  /* 文字溢出部分变成省略号... */
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  word-break: break-all;
  text-overflow: ellipsis;
  height: 80rpx;
  line-height: 40rpx;
  margin-top: 16rpx;
  color: #333;
  font-size: 28rpx;
}
.prolist_price{
  margin-top: 20rpx;
  display: inline-block;
  /* height: 72rpx; */
  line-height: 36rpx;
  color: #e93b3d;
  min-width: 80rpx;
  font-size: 11px;
  font-weight: bold;
}
.prolist_price_name{
  display: inline-block;
  font-weight: normal;
  color: #fff;
  background-color: #e93b3d;
  margin: 0rpx 5rpx 10rpx 5rpx;
}
.prolist_price_names{
  display: inline-block;
  font-weight: normal;
  color: #e93b3d;
  border: 1px solid #e93b3d;
  margin: 0rpx 5rpx 10rpx 5rpx;
}
.prolist_other{
  font-size: 24rpx;
  padding: 12rpx 60rpx 4rpx 0;
  box-sizing: border-box;
  color: #999;
  display: flex;
  justify-content: space-around;
}
.prolist_conmment{
  margin-right: 10rpx;
}
.prolist_rate{
  margin-right: 10rpx;
}
.endview{
  width: 100%;
  box-sizing: border-box;
  padding: 30rpx;
  text-align: center;
  font-size: 24rpx;
  color: #999;
}
.prolist_other button{
  display: inline-block;
  width: 150rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 12px;
  padding: 0;
  background-color: #fff;
}